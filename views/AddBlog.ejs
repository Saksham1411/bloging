<!DOCTYPE html> 
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/Nav') %>
    <div class="p-4">
      <form class="flex flex-col" action="/blog" method="post" enctype="multipart/form-data">

        <label for="coverImage">Cover Image</label>
        <input
          type="file"
          name="coverImage"
          id="coverImage"
          class="border border-black rounded pl-2"
        />
        <label for="title">Title</label>
        <input
          type="text"
          name="title"
          id="title"
          class="border border-black rounded pl-2"
        />
        <label for="body">Body</label>
        <textarea
          name="body"
          id="body"
          class="border border-black rounded pl-1"
          rows="8"
        ></textarea>
        <button type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
