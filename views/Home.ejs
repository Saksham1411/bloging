<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/Nav') %>

    <div class="mt-3 flex">
      <% blogs.forEach(blog => { %>
      <div class="border border-black rounded-xl p-4 m-2">
        <img src="<%= blog.coverImageURL %>" class="w-48 rounded" alt="..." />
        <div class="body">
          <h5 class="font-bold text-xl my-2"><%= blog.title %></h5>
          <a
            href="/blog/<%= blog._id %>"
            class="border border-gray-900 bg-gray-900 text-white px-3 py-1 rounded-lg"
            >View</a
          >
        </div>
      </div>

      <% }) %>
    </div>

    <!-- <%= JSON.stringify(blogs) %> -->
  </body>
</html>
